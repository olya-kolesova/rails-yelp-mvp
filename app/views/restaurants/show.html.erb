<%= link_to 'Back', restaurants_path %>
<br>
<br>
<h2>Restaurant</h2>
<h3><%= @restaurant.name  %></h3>
<h4><%=  @restaurant.category %></h4>
<br>
<h4><%=  @restaurant.address %></h4>
<h4><%=  @restaurant.phone_number %></h4>
<br>
<br>
<%= link_to 'Create a new review', new_restaurant_review_path(@restaurant) %>
<br>
<br>
<h2>Reviews</h2>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= '⭐️'*review.rating %>
      <%= review.content %>
    </li>
  <% end %>
</ul>
